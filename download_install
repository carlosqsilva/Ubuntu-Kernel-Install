#!/bin/bash

echo " ____   _____        ___   _ _     ___    _    ____ ___ _   _  ____ "
echo "|  _ \ / _ \ \      / / \ | | |   / _ \  / \  |  _ \_ _| \ | |/ ___|"
echo "| | | | | | \ \ /\ / /|  \| | |  | | | |/ _ \ | | | | ||  \| | |  _ "
echo "| |_| | |_| |\ V  V / | |\  | |__| |_| / ___ \| |_| | || |\  | |_| |"
echo "|____/ \___/  \_/\_/  |_| \_|_____\___/_/   \_\____/___|_| \_|\____|"
echo
echo "Creating Directory in : /tmp/kernel"
sleep 3

mkdir -p /tmp/kernel
cd /tmp/kernel
rm *.deb
clear

wget $1
clear

wget $2
clear

wget $3
clear

echo " ___ _   _ ____ _____  _    _     _        _  _____ ___ ___  _   _"
echo "|_ _| \ | / ___|_   _|/ \  | |   | |      / \|_   _|_ _/ _ \| \ | |"
echo " | ||  \| \___ \ | | / _ \ | |   | |     / _ \ | |  | | | | |  \| |"
echo " | || |\  |___) || |/ ___ \| |___| |___ / ___ \| |  | | |_| | |\  |"
echo "|___|_| \_|____/ |_/_/   \_\_____|_____/_/   \_\_| |___\___/|_| \_|"
sleep 3

sudo dpkg -i *.deb

init 6
